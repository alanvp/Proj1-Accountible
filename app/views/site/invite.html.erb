<%= render 'layouts/sidebar' %>

<div class="row">
  <div class="col-md-2">
  </div>

  <div class="col-md-5">
    <%= form_for :invites, url: invite_path, method: :post do |f| %>
      
      <p><%= f.label :Enter_email_addresses_separated_by_commas %></p>
      <%= f.text_area :emails, size: "60x12" %>

      <%= f.submit "Invite", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

